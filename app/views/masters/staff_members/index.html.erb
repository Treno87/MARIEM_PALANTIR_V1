<% content_for(:page_title) { "직원 관리" } %>

<div class="flex items-center justify-between mb-6">
  <p class="text-sm text-zinc-500">총 <%= @staff_members.count %>명</p>
  <%= link_to new_masters_staff_member_path, class: "btn btn-primary" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
    새 직원
  <% end %>
</div>

<div class="card">
  <% if @staff_members.any? %>
    <div class="divide-y divide-zinc-100">
      <% @staff_members.each do |staff| %>
        <div class="px-6 py-4 flex items-center justify-between hover:bg-zinc-50 transition-colors">
          <div class="flex items-center gap-4">
            <div class="avatar avatar-md"><%= staff.name[0] %></div>
            <div>
              <p class="text-sm font-medium text-zinc-900"><%= staff.name %></p>
              <p class="text-xs text-zinc-500"><%= staff.role_title %></p>
            </div>
          </div>
          <div class="flex items-center gap-6">
            <% if staff.active? %>
              <span class="badge badge-success">재직</span>
            <% else %>
              <span class="badge badge-error">퇴사</span>
            <% end %>
            <div class="flex items-center gap-1">
              <%= link_to edit_masters_staff_member_path(staff), class: "btn btn-ghost btn-sm" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
              <% end %>
              <%= button_to masters_staff_member_path(staff), method: :delete, data: { turbo_confirm: "정말 삭제하시겠습니까?" }, class: "btn btn-ghost btn-sm text-zinc-400 hover:text-red-500" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="px-6 py-16 text-center">
      <svg class="w-12 h-12 text-zinc-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
      <p class="text-sm text-zinc-500 mb-4">등록된 직원이 없습니다</p>
      <%= link_to new_masters_staff_member_path, class: "btn btn-primary" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
        첫 직원 등록
      <% end %>
    </div>
  <% end %>
</div>
