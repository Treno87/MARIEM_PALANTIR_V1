<% content_for(:page_title) { "대시보드" } %>

<!-- Stats -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-5 mb-8">
  <div class="card">
    <div class="card-body">
      <div class="flex items-center justify-between">
        <div class="stat">
          <p class="stat-title">오늘 방문</p>
          <p class="stat-value"><%= @today_visits_count %></p>
        </div>
        <div class="w-12 h-12 bg-blue-50 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="flex items-center justify-between">
        <div class="stat">
          <p class="stat-title">오늘 매출</p>
          <p class="stat-value text-2xl"><%= number_to_currency(@today_revenue, unit: "₩", precision: 0, delimiter: ",") %></p>
        </div>
        <div class="w-12 h-12 bg-emerald-50 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="flex items-center justify-between">
        <div class="stat">
          <p class="stat-title">전체 고객</p>
          <p class="stat-value"><%= Customer.for_store(current_store.id).count %></p>
        </div>
        <div class="w-12 h-12 bg-violet-50 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Recent Visits -->
<div class="card">
  <div class="px-6 py-4 border-b border-zinc-100 flex items-center justify-between">
    <h2 class="card-title">최근 거래</h2>
    <%= link_to transactions_visits_path, class: "text-sm font-medium text-zinc-500 hover:text-zinc-700" do %>
      전체보기 &rarr;
    <% end %>
  </div>

  <% if @recent_visits.any? %>
    <div class="divide-y divide-zinc-100">
      <% @recent_visits.each do |visit| %>
        <div class="px-6 py-4 flex items-center justify-between hover:bg-zinc-50 transition-colors">
          <div class="flex items-center gap-4">
            <div class="avatar avatar-md bg-zinc-200 text-zinc-600"><%= visit.customer.name[0] %></div>
            <div>
              <p class="text-sm font-medium text-zinc-900"><%= visit.customer.name %></p>
              <p class="text-xs text-zinc-500"><%= visit.visited_at.strftime("%m/%d %H:%M") %></p>
            </div>
          </div>
          <div class="flex items-center gap-4">
            <div class="text-right">
              <p class="text-sm font-semibold text-zinc-900"><%= number_to_currency(visit.total_amount, unit: "₩", precision: 0) %></p>
              <% if visit.finalized? %>
                <span class="badge badge-success">확정</span>
              <% else %>
                <span class="badge badge-warning">임시</span>
              <% end %>
            </div>
            <%= link_to edit_transactions_visit_path(visit), class: "btn btn-ghost btn-sm" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"/></svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="px-6 py-12 text-center">
      <svg class="w-12 h-12 text-zinc-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>
      <p class="text-sm text-zinc-500">아직 거래 내역이 없습니다</p>
      <%= link_to "첫 거래 시작하기", new_transactions_visit_path, class: "btn btn-primary mt-4" %>
    </div>
  <% end %>
</div>
