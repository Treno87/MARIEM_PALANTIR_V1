<% content_for(:page_title) { "거래 내역" } %>

<div class="card">
  <div class="px-6 py-4 border-b border-zinc-100">
    <div class="flex items-center justify-between">
      <h2 class="card-title">전체 거래</h2>
      <span class="text-sm text-zinc-500"><%= @pagy.count %>건</span>
    </div>
  </div>

  <% if @visits.any? %>
    <div class="divide-y divide-zinc-100">
      <% @visits.each do |visit| %>
        <div class="px-6 py-4 flex items-center justify-between hover:bg-zinc-50 transition-colors">
          <div class="flex items-center gap-4">
            <div class="avatar avatar-md bg-zinc-200 text-zinc-600"><%= visit.customer.name[0] %></div>
            <div>
              <p class="text-sm font-medium text-zinc-900"><%= visit.customer.name %></p>
              <p class="text-xs text-zinc-500"><%= visit.visited_at.strftime("%Y.%m.%d %H:%M") %></p>
            </div>
          </div>

          <div class="flex items-center gap-6">
            <div class="text-right hidden sm:block">
              <p class="text-xs text-zinc-500">결제</p>
              <p class="text-sm text-zinc-700"><%= number_to_currency(visit.paid_amount, unit: "₩", precision: 0) %></p>
            </div>
            <div class="text-right">
              <p class="text-sm font-semibold text-zinc-900"><%= number_to_currency(visit.total_amount, unit: "₩", precision: 0) %></p>
              <% if visit.finalized? %>
                <span class="badge badge-success">확정</span>
              <% else %>
                <span class="badge badge-warning">임시</span>
              <% end %>
            </div>
            <%= link_to (visit.draft? ? edit_transactions_visit_path(visit) : transactions_visit_path(visit)), class: "btn btn-ghost btn-sm ml-2" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"/></svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="px-6 py-4 border-t border-zinc-100 flex items-center justify-center gap-2">
        <% if @pagy.prev %>
          <%= link_to transactions_visits_path(page: @pagy.prev), class: "btn btn-ghost btn-sm" do %>
            &larr; 이전
          <% end %>
        <% end %>
        <span class="px-3 py-1.5 text-sm text-zinc-500"><%= @pagy.page %> / <%= @pagy.pages %></span>
        <% if @pagy.next %>
          <%= link_to transactions_visits_path(page: @pagy.next), class: "btn btn-ghost btn-sm" do %>
            다음 &rarr;
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="px-6 py-16 text-center">
      <svg class="w-12 h-12 text-zinc-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>
      <p class="text-sm text-zinc-500 mb-4">거래 내역이 없습니다</p>
      <%= link_to new_transactions_visit_path, class: "btn btn-primary" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
        첫 거래 시작
      <% end %>
    </div>
  <% end %>
</div>
