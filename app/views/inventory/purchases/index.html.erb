<% content_for(:page_title) { "입고 관리" } %>

<div class="flex items-center justify-between mb-6">
  <p class="text-sm text-zinc-500">총 <%= @purchases.count %>건</p>
  <%= link_to new_inventory_purchase_path, class: "btn btn-primary" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
    새 입고
  <% end %>
</div>

<div class="card">
  <% if @purchases.any? %>
    <div class="divide-y divide-zinc-100">
      <% @purchases.each do |purchase| %>
        <div class="px-6 py-4 flex items-center justify-between hover:bg-zinc-50 transition-colors">
          <div class="flex items-center gap-4">
            <div class="w-10 h-10 rounded-lg bg-emerald-50 flex items-center justify-center">
              <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/></svg>
            </div>
            <div>
              <p class="text-sm font-medium text-zinc-900"><%= purchase.vendor&.name || '공급업체 없음' %></p>
              <p class="text-xs text-zinc-500"><%= purchase.purchased_at.strftime("%Y.%m.%d") %> · <%= purchase.inventory_purchase_items.count %>품목</p>
            </div>
          </div>
          <div class="flex items-center gap-6">
            <div class="text-right">
              <p class="text-sm font-semibold text-zinc-900"><%= number_to_currency(purchase.inventory_purchase_items.sum { |i| i.qty * i.unit_cost }, unit: "₩", precision: 0) %></p>
            </div>
            <div class="flex items-center gap-1">
              <%= link_to inventory_purchase_path(purchase), class: "btn btn-ghost btn-sm" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
              <% end %>
              <%= link_to edit_inventory_purchase_path(purchase), class: "btn btn-ghost btn-sm" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="px-6 py-16 text-center">
      <svg class="w-12 h-12 text-zinc-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/></svg>
      <p class="text-sm text-zinc-500 mb-4">입고 내역이 없습니다</p>
      <%= link_to new_inventory_purchase_path, class: "btn btn-primary" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
        첫 입고 등록
      <% end %>
    </div>
  <% end %>
</div>
