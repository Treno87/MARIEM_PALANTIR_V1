<%= form_with model: [:masters, @product], class: "space-y-5" do |f| %>
  <% if @product.errors.any? %>
    <div class="alert alert-error">
      <%= @product.errors.full_messages.first %>
    </div>
  <% end %>

  <div>
    <label class="label">상품명</label>
    <%= f.text_field :name, class: "input", placeholder: "예: 샴푸" %>
  </div>

  <div>
    <label class="label">공급업체</label>
    <%= f.select :vendor_id, @vendors.map { |v| [v.name, v.id] }, { prompt: "공급업체 선택" }, class: "select" %>
  </div>

  <div>
    <label class="label">유형</label>
    <%= f.select :kind, [["판매용", "retail"], ["소모품", "consumable"], ["판매+소모", "both"]], {}, class: "select" %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <label class="label">매입가</label>
      <%= f.number_field :default_purchase_unit_price, class: "input", placeholder: "0" %>
    </div>
    <div>
      <label class="label">판매가</label>
      <%= f.number_field :default_retail_unit_price, class: "input", placeholder: "0" %>
    </div>
  </div>

  <div class="flex gap-3 pt-2">
    <%= f.submit class: "btn btn-primary flex-1" %>
    <%= link_to "취소", masters_products_path, class: "btn btn-secondary" %>
  </div>
<% end %>
