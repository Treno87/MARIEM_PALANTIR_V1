{
	"hooks": {
		"PostToolUse": [
			{
				"matcher": "Write|Edit",
				"hooks": [
					{
						"type": "command",
						"command": "bash $CLAUDE_PROJECT_DIR/.claude/hooks/quality-guard.sh",
						"timeout": 30000
					}
				]
			}
		],
		"Notification": [],
		"Stop": []
	},
	"permissions": {
		"allow": [
			"Read(*)",
			"Write(./*)",
			"Bash(bundle:*)",
			"Bash(rails:*)",
			"Bash(rake:*)",
			"Bash(rspec:*)",
			"Bash(git:*)",
			"Bash(rubocop:*)"
		],
		"deny": ["Write(~/*)", "Bash(rm -rf *)"]
	},
	"enabledPlugins": {}
}
